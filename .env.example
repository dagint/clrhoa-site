# Copy to .env.local for local development. Do not commit .env or .env.local.
# In production, set these in Cloudflare Pages → Settings → Environment variables.

# Contact form: StaticForms (https://www.staticforms.xyz/)
# Get your API key at https://www.staticforms.xyz/ (or https://www.staticforms.dev/register)
PUBLIC_STATICFORMS_API_KEY=

# Optional: reCAPTCHA site key (if you enable reCAPTCHA in StaticForms dashboard)
# StaticForms supports reCAPTCHA v2, ALTCHA, or honeypot-only (no key needed)
PUBLIC_RECAPTCHA_SITE_KEY=

# Contact Information (PII - Keep Private)
# Security contact email for security.txt
PUBLIC_SECURITY_EMAIL=security@clrhoa.com

# Mailing address (for contact page and documents)
PUBLIC_MAILING_ADDRESS_NAME=Crooked Lake Reserve HOA
PUBLIC_MAILING_ADDRESS_LINE1=252 W Ardice Ave. #400
PUBLIC_MAILING_ADDRESS_LINE2=Eustis, FL 32726

# Physical address (for map page and structured data)
PUBLIC_PHYSICAL_ADDRESS_STREET=2 Lakes Ln
PUBLIC_PHYSICAL_ADDRESS_CITY=Eustis
PUBLIC_PHYSICAL_ADDRESS_STATE=FL
PUBLIC_PHYSICAL_ADDRESS_ZIP=32726

# Meeting location
PUBLIC_MEETING_LOCATION=Eustis Community Center
# Optional: room name or number (e.g., "Room 3" or "Conference Room A")
PUBLIC_MEETING_ROOM=
PUBLIC_MEETING_ADDRESS_STREET=1090 S Bay St
PUBLIC_MEETING_ADDRESS_CITY=Eustis
PUBLIC_MEETING_ADDRESS_STATE=FL
PUBLIC_MEETING_ADDRESS_ZIP=32726

# Waste Management & Recycling
# Trash and recycling pickup schedules (e.g., "Every Tuesday" or "Monday and Thursday")
# Note: WM provides weekly service. Verify your specific service day at wm.com
PUBLIC_TRASH_SCHEDULE=Weekly (verify your day at wm.com)
PUBLIC_RECYCLING_SCHEDULE=Weekly (same day as trash)

# Waste Management Contact (WM - Waste Management)
PUBLIC_WASTE_MANAGEMENT_CONTACT=Waste Management (WM)
PUBLIC_WASTE_MANAGEMENT_PHONE=
PUBLIC_WASTE_MANAGEMENT_WEBSITE=https://www.wm.com/us/en/location/fl/eustis/trash-pickup-eustis-fl

# Recycling Center Information (RecycleiT)
PUBLIC_RECYCLING_CENTER_NAME=RecycleiT LLC
PUBLIC_RECYCLING_CENTER_ADDRESS=15940 Old Highway 441, Tavares, FL 32778
PUBLIC_RECYCLING_CENTER_HOURS=Monday - Friday 9am - 4:15pm, Saturday 9am - 11:45am
PUBLIC_RECYCLING_CENTER_PHONE=352-343-5144
PUBLIC_RECYCLING_CENTER_WEBSITE=https://recycleit.green/

# Dues & Payment Information
# Quarterly assessment amount (e.g., "250.00" or "250")
PUBLIC_QUARTERLY_DUES_AMOUNT=225
# Payment methods (comma-separated: "Check", "Online", "Bank")
PUBLIC_PAYMENT_METHODS=Check
# Late fee amount (e.g., "25.00")
PUBLIC_LATE_FEE_AMOUNT=
# Days after due date before late fee applies (default: 15)
PUBLIC_LATE_FEE_DAYS=15
# Additional payment instructions (optional)
PUBLIC_PAYMENT_INSTRUCTIONS=
# Payment drop-off location (e.g., "House #323" or "Drop off at house #323")
PUBLIC_PAYMENT_DROP_OFF_LOCATION=

# Water Restrictions (Optional)
# Current watering schedule (multi-line text, e.g., "Addresses ending in 0 or 1: Monday\nAddresses ending in 2 or 3: Tuesday...")
PUBLIC_WATER_RESTRICTION_SCHEDULE=
# Water restriction contact phone
PUBLIC_WATER_RESTRICTION_PHONE=
# Water restriction website URL
PUBLIC_WATER_RESTRICTION_WEBSITE=
# Local water utility name
PUBLIC_WATER_UTILITY_CONTACT=
# Water utility phone
PUBLIC_WATER_UTILITY_PHONE=
# Water utility website
PUBLIC_WATER_UTILITY_WEBSITE=

# Social Media Links (Optional)
# Add social media URLs to display icons in the footer
PUBLIC_FACEBOOK_URL=
PUBLIC_TWITTER_URL=
PUBLIC_INSTAGRAM_URL=
PUBLIC_NEXTDOOR_URL=
