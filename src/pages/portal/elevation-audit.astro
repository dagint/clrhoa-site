---
/**
 * Read-only PIM elevation audit: who requested elevated access and when.
 * Visible to users with an elevated whitelist role (board, ARB, admin) without requiring them to elevate.
 * Full audit logs (directory, ARB, etc.) remain on Board and require elevated access.
 */
export const prerender = false;

import PortalLayout from '../../layouts/PortalLayout.astro';
import PortalPage from '../../components/PortalPage.astro';
import { getPortalContext } from '../../lib/portal-context';
import { getPortalBadgeCounts } from '../../lib/portal-badge-counts';
import { listPimElevationLog } from '../../lib/pim-db';
import { ELEVATED_ROLES } from '../../lib/auth';

const { env, session, effectiveRole } = await getPortalContext(Astro);
if (!session) return Astro.redirect('/auth/login');

const whitelistRole = (session.role ?? 'member').toLowerCase();
const canView = ELEVATED_ROLES.has(whitelistRole);
if (!canView) return Astro.redirect('/portal/dashboard');

const ELEVATION_AUDIT_PAGE_SIZES = [10, 25, 50, 100] as const;
const DEFAULT_ELEVATION_AUDIT_PAGE_SIZE = 25;
const url = Astro.url;
const getPage = (): number => {
  const p = url.searchParams.get('page');
  const n = p ? parseInt(p, 10) : 1;
  return Number.isNaN(n) || n < 1 ? 1 : Math.min(n, 1000);
};
const getLimit = (): number => {
  const p = url.searchParams.get('limit');
  const n = p ? parseInt(p, 10) : DEFAULT_ELEVATION_AUDIT_PAGE_SIZE;
  return ELEVATION_AUDIT_PAGE_SIZES.includes(n as (typeof ELEVATION_AUDIT_PAGE_SIZES)[number]) ? n : DEFAULT_ELEVATION_AUDIT_PAGE_SIZE;
};
const page = getPage();
const pageSize = getLimit();

function elevationAuditPageUrl(value: number): string {
  const u = new URL(url);
  if (value <= 1) u.searchParams.delete('page');
  else u.searchParams.set('page', String(value));
  if (pageSize !== DEFAULT_ELEVATION_AUDIT_PAGE_SIZE) u.searchParams.set('limit', String(pageSize));
  return u.pathname + u.search;
}

const { email, role, name } = session;
const db = env?.DB;
const badges = await getPortalBadgeCounts(db, email, role, name);
const pimLog = db ? await listPimElevationLog(db, pageSize, (page - 1) * pageSize) : [];

function formatDate(s: string | null): string {
  if (!s) return '—';
  try {
    const d = new Date(s);
    return Number.isNaN(d.getTime()) ? s : d.toLocaleString();
  } catch {
    return s ?? '—';
  }
}
---

<PortalLayout title="Elevation audit (read-only) | Member Portal | Crooked Lake Reserve HOA">
  <PortalPage
    currentPath="/portal/elevation-audit"
    pageTitle="Elevation Audit"
    userName={badges.displayName ?? undefined}
    userEmail={email}
    effectiveRole={effectiveRole}
    draftCount={badges.draftCount}
    role={effectiveRole}
    staffRole={role ?? ''}
    arbInReviewCount={badges.arbInReviewCount}
    vendorPendingCount={badges.vendorPendingCount}
    maintenanceOpenCount={badges.maintenanceOpenCount}
    meetingsRsvpCount={badges.meetingsRsvpCount}
    feedbackDueCount={badges.feedbackDueCount}
  >
    <div class="mb-8 p-5 rounded-xl bg-blue-50 border border-blue-200 text-blue-900 text-base" role="status">
      <strong>Read-only.</strong> This page shows when someone requested or dropped elevated access. It does not require you to elevate. For the full audit log (directory, ARB, payments, etc.), use Board → Audit logs after requesting elevated access.
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-heading font-bold text-clr-green mb-3">PIM: elevated access requests</h1>
      <p class="text-gray-600 text-lg">Who elevated or dropped temporary access, and when that access was set to expire.</p>
    </div>

    {pimLog.length === 0 && page === 1 ? (
      <div class="bg-white rounded-xl border border-gray-200 p-5">
        <p class="text-gray-500 text-base">No elevation entries yet.</p>
      </div>
    ) : (
      <>
      <div class="flex flex-wrap items-center gap-3 mb-6">
        <label for="elevation-audit-per-page" class="text-base font-medium text-gray-700">Per page:</label>
        <select id="elevation-audit-per-page" name="limit" class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-base text-gray-700 focus:border-clr-green focus:outline-none focus:ring-2 focus:ring-clr-green" aria-label="Entries per page">
          {ELEVATION_AUDIT_PAGE_SIZES.map((size) => (
            <option value={size} selected={pageSize === size}>{size}</option>
          ))}
        </select>
      </div>
      <script is:inline>
        document.getElementById('elevation-audit-per-page')?.addEventListener('change', function () {
          const limit = this.value;
          const u = new URL(window.location.href);
          u.searchParams.set('limit', limit);
          u.searchParams.delete('page');
          if (limit === '25') u.searchParams.delete('limit');
          window.location.href = u.pathname + u.search;
        });
      </script>
      <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-base">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">When</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Email</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Role</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Action</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Expires at</th>
              </tr>
            </thead>
            <tbody>
              {pimLog.map((row) => (
                <tr class="border-b border-gray-100 hover:bg-gray-50/50">
                  <td class="py-3 px-4 text-gray-600">{formatDate(row.elevated_at)}</td>
                  <td class="py-3 px-4">{row.email ?? '—'}</td>
                  <td class="py-3 px-4">{row.role ?? '—'}</td>
                  <td class="py-3 px-4">{row.action === 'elevate' ? 'Elevated' : 'Dropped'}</td>
                  <td class="py-3 px-4 text-gray-600">{row.expires_at ? formatDate(row.expires_at) : '—'}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        {pimLog.length > 0 && (
          <nav class="flex items-center justify-between gap-3 py-3 px-4 border-t border-gray-200 bg-gray-50 text-base" aria-label="Elevation audit pagination">
            <span class="text-gray-600 font-medium">Page {page}</span>
            <div class="flex gap-3">
              {page > 1 && <a href={elevationAuditPageUrl(page - 1)} class="text-clr-green hover:underline font-semibold">Previous</a>}
              {pimLog.length === pageSize && <a href={elevationAuditPageUrl(page + 1)} class="text-clr-green hover:underline font-semibold">Next</a>}
            </div>
          </nav>
        )}
      </div>
      </>
    )}
  </PortalPage>
</PortalLayout>
