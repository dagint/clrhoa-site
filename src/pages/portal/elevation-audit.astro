---
/**
 * Read-only PIM elevation audit: who requested elevated access and when.
 * Visible to users with an elevated whitelist role (board, ARB, admin) without requiring them to elevate.
 * Full audit logs (directory, ARB, etc.) remain on Board and require elevated access.
 */
export const prerender = false;

import PortalLayout from '../../layouts/PortalLayout.astro';
import ProtectedPage from '../../components/ProtectedPage.astro';
import PortalNav from '../../components/PortalNav.astro';
import { getPortalContext } from '../../lib/portal-context';
import { listArbRequestsByHousehold } from '../../lib/arb-db';
import { listPimElevationLog } from '../../lib/pim-db';
import { ELEVATED_ROLES } from '../../lib/auth';

const { env, session, effectiveRole } = await getPortalContext(Astro);
if (!session) return Astro.redirect('/portal/login');

const whitelistRole = (session.role ?? 'member').toLowerCase();
const canView = ELEVATED_ROLES.has(whitelistRole);
if (!canView) return Astro.redirect('/portal/dashboard');

const ELEVATION_AUDIT_PAGE_SIZES = [10, 25, 50, 100] as const;
const DEFAULT_ELEVATION_AUDIT_PAGE_SIZE = 25;
const url = Astro.url;
const getPage = (): number => {
  const p = url.searchParams.get('page');
  const n = p ? parseInt(p, 10) : 1;
  return Number.isNaN(n) || n < 1 ? 1 : Math.min(n, 1000);
};
const getLimit = (): number => {
  const p = url.searchParams.get('limit');
  const n = p ? parseInt(p, 10) : DEFAULT_ELEVATION_AUDIT_PAGE_SIZE;
  return ELEVATION_AUDIT_PAGE_SIZES.includes(n as (typeof ELEVATION_AUDIT_PAGE_SIZES)[number]) ? n : DEFAULT_ELEVATION_AUDIT_PAGE_SIZE;
};
const page = getPage();
const pageSize = getLimit();

function elevationAuditPageUrl(value: number): string {
  const u = new URL(url);
  if (value <= 1) u.searchParams.delete('page');
  else u.searchParams.set('page', String(value));
  if (pageSize !== DEFAULT_ELEVATION_AUDIT_PAGE_SIZE) u.searchParams.set('limit', String(pageSize));
  return u.pathname + u.search;
}

const db = env?.DB;
const pimLog = db ? await listPimElevationLog(db, pageSize, (page - 1) * pageSize) : [];
const allRequests = db ? await listArbRequestsByHousehold(db, session.email) : [];
const draftCount = allRequests.filter((r) => r.status === 'pending').length;

function formatDate(s: string | null): string {
  if (!s) return '—';
  try {
    const d = new Date(s);
    return Number.isNaN(d.getTime()) ? s : d.toLocaleString();
  } catch {
    return s ?? '—';
  }
}
---

<PortalLayout title="Elevation audit (read-only) | Member Portal | Crooked Lake Reserve HOA">
  <ProtectedPage>
    <div class="min-h-screen portal-theme-bg font-body">
      <PortalNav currentPath="/portal/elevation-audit" draftCount={draftCount} role={effectiveRole} staffRole={session?.role ?? ''} />

      <main class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
        <div class="mb-6 p-4 rounded-xl bg-blue-50 border border-blue-200 text-blue-900 text-sm" role="status">
          <strong>Read-only.</strong> This page shows when someone requested or dropped elevated access. It does not require you to elevate. For the full audit log (directory, ARB, payments, etc.), use Board → Audit logs after requesting elevated access.
        </div>

        <h1 class="text-2xl font-heading font-bold text-clr-green mb-2">PIM: elevated access requests</h1>
        <p class="text-gray-600 mb-6">Who elevated or dropped temporary access, and when that access was set to expire.</p>

        {pimLog.length === 0 && page === 1 ? (
          <div class="bg-white rounded-xl border border-gray-200 p-4">
            <p class="text-gray-500">No elevation entries yet.</p>
          </div>
        ) : (
          <>
          <div class="flex flex-wrap items-center gap-2 mb-4">
            <label for="elevation-audit-per-page" class="text-sm text-gray-600">Per page:</label>
            <select id="elevation-audit-per-page" name="limit" class="rounded border border-gray-300 bg-white px-2 py-1.5 text-sm text-gray-700 focus:border-clr-green focus:outline-none focus:ring-1 focus:ring-clr-green" aria-label="Entries per page">
              {ELEVATION_AUDIT_PAGE_SIZES.map((size) => (
                <option value={size} selected={pageSize === size}>{size}</option>
              ))}
            </select>
          </div>
          <script is:inline>
            document.getElementById('elevation-audit-per-page')?.addEventListener('change', function () {
              const limit = this.value;
              const u = new URL(window.location.href);
              u.searchParams.set('limit', limit);
              u.searchParams.delete('page');
              if (limit === '25') u.searchParams.delete('limit');
              window.location.href = u.pathname + u.search;
            });
          </script>
          <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="text-left py-2 px-3 font-medium text-gray-700">When</th>
                    <th class="text-left py-2 px-3 font-medium text-gray-700">Email</th>
                    <th class="text-left py-2 px-3 font-medium text-gray-700">Role</th>
                    <th class="text-left py-2 px-3 font-medium text-gray-700">Action</th>
                    <th class="text-left py-2 px-3 font-medium text-gray-700">Expires at</th>
                  </tr>
                </thead>
                <tbody>
                  {pimLog.map((row) => (
                    <tr class="border-b border-gray-100 hover:bg-gray-50/50">
                      <td class="py-2 px-3 text-gray-600">{formatDate(row.elevated_at)}</td>
                      <td class="py-2 px-3">{row.email ?? '—'}</td>
                      <td class="py-2 px-3">{row.role ?? '—'}</td>
                      <td class="py-2 px-3">{row.action === 'elevate' ? 'Elevated' : 'Dropped'}</td>
                      <td class="py-2 px-3 text-gray-600">{row.expires_at ? formatDate(row.expires_at) : '—'}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
            {pimLog.length > 0 && (
              <nav class="flex items-center justify-between gap-2 py-2 px-3 border-t border-gray-200 bg-gray-50 text-sm" aria-label="Elevation audit pagination">
                <span class="text-gray-600">Page {page}</span>
                <div class="flex gap-2">
                  {page > 1 && <a href={elevationAuditPageUrl(page - 1)} class="text-clr-green hover:underline font-medium">Previous</a>}
                  {pimLog.length === pageSize && <a href={elevationAuditPageUrl(page + 1)} class="text-clr-green hover:underline font-medium">Next</a>}
                </div>
              </nav>
            )}
          </div>
          </>
        )}
      </main>
    </div>
  </ProtectedPage>
</PortalLayout>
