---
export const prerender = false;

import PortalLayout from '../../layouts/PortalLayout.astro';
import PortalPage from '../../components/PortalPage.astro';
import { getPortalContext } from '../../lib/portal-context';
import { getPortalBadgeCounts } from '../../lib/portal-badge-counts';
import { listActiveFeedbackDocs, getFeedbackResponse, householdHasResponded } from '../../lib/feedback-db';

const { env, session, effectiveRole } = await getPortalContext(Astro, { fingerprint: true });
if (!session) return Astro.redirect('/portal/login');

const { email, role, name } = session;
const db = env?.DB;
const badges = await getPortalBadgeCounts(db, email, role, name);
const docs = db ? await listActiveFeedbackDocs(db) : [];
const docsWithMyResponse = db
  ? await Promise.all(
      docs.map(async (d) => {
        const myResponse = await getFeedbackResponse(db, d.id, session!.email);
        const household_has_responded = await householdHasResponded(db, d.id, session!.email);
        return {
          ...d,
          my_response: myResponse
            ? {
                acknowledged: myResponse.acknowledged === 1,
                approved: myResponse.approved === 1 ? true : myResponse.approved === 0 ? false : null,
                comments: myResponse.comments,
                responded: myResponse.responded,
              }
            : null,
          household_has_responded,
        };
      })
    )
  : [];

function formatDate(s: string | null): string {
  if (!s) return '-';
  try {
    return new Date(s).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
  } catch {
    return s;
  }
}
---

<PortalLayout title="Feedback | Member Portal | Crooked Lake Reserve HOA">
  <PortalPage
    currentPath="/portal/feedback"
    pageTitle="Document Feedback"
    userName={badges.displayName ?? undefined}
    userEmail={email}
    effectiveRole={effectiveRole}
    draftCount={badges.draftCount}
    role={effectiveRole}
    staffRole={role ?? ''}
    arbInReviewCount={badges.arbInReviewCount}
    vendorPendingCount={badges.vendorPendingCount}
    maintenanceOpenCount={badges.maintenanceOpenCount}
    meetingsRsvpCount={badges.meetingsRsvpCount}
    feedbackDueCount={badges.feedbackDueCount}
  >
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 sm:p-8 mb-8">
      <h1 class="text-3xl font-heading font-bold text-clr-green mb-3">Document Feedback</h1>
      <p class="text-gray-600 text-lg">
        Read proposed documents and record your acknowledgment and approval or rejection.
      </p>
    </div>

    {docsWithMyResponse.length === 0 ? (
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-12 text-center">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="text-gray-500 text-lg mb-2">No active feedback requests</p>
        <p class="text-gray-400">Check back later for documents that need your feedback</p>
      </div>
    ) : (
      <ul class="space-y-6">
        {docsWithMyResponse.map((d) => (
          <li class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 sm:p-8" data-doc-id={d.id}>
            <h3 class="text-2xl font-heading font-semibold text-clr-green mb-2">{d.title || 'Document'}</h3>
            {d.deadline && (
              <p class="text-base text-gray-600 mb-3">
                <span class="font-medium">Responses due by:</span> {formatDate(d.deadline)}
              </p>
            )}
            {d.description && <p class="text-gray-600 text-base mb-4 whitespace-pre-wrap leading-relaxed">{d.description}</p>}
            {d.r2_key && (
              <p class="mb-4">
                <a
                  href={`/api/portal/file/${encodeURIComponent(d.r2_key)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-clr-orange font-semibold hover:underline text-base"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span>View / download PDF</span>
                </a>
              </p>
            )}
            <div class="feedback-response border-t border-gray-200 pt-6 mt-6">
              {d.household_has_responded && (
                <p class="text-base text-gray-600 mb-3 bg-blue-50 p-3 rounded-lg">
                  Someone at your address has already responded to this document.
                </p>
              )}
              {d.my_response ? (
                <p class="text-base text-green-700 font-semibold bg-green-50 p-4 rounded-lg">
                  âœ“ Thank you, your vote has been recorded.
                </p>
              ) : (
                <>
                  <div class="flex flex-wrap items-center gap-4 mb-4">
                    <label class="flex items-center gap-2 cursor-pointer text-base">
                      <input type="checkbox" class="feedback-ack w-5 h-5 rounded border-gray-300 text-clr-green" data-doc-id={d.id} />
                      <span>I&apos;ve read this document</span>
                    </label>
                    <button type="button" class="feedback-approve px-5 py-3 rounded-lg text-base font-semibold bg-green-100 text-green-800 hover:bg-green-200 transition-colors" data-doc-id={d.id} data-approved="1">
                      Approve
                    </button>
                    <button type="button" class="feedback-reject px-5 py-3 rounded-lg text-base font-semibold bg-red-100 text-red-800 hover:bg-red-200 transition-colors" data-doc-id={d.id} data-approved="0">
                      Reject
                    </button>
                  </div>
                  <div class="mt-4">
                    <label for={`comments-${d.id}`} class="block text-base font-medium text-gray-700 mb-2">
                      Comments (optional)
                    </label>
                    <textarea
                      id={`comments-${d.id}`}
                      class="feedback-comments w-full rounded-lg border border-gray-300 px-4 py-3 text-base focus:border-clr-green focus:outline-none focus:ring-2 focus:ring-clr-green"
                      rows={3}
                      placeholder="Add any comments or feedback here..."
                      data-doc-id={d.id}
                    ></textarea>
                  </div>
                  <button type="button" class="feedback-submit mt-4 bg-clr-green hover:brightness-110 text-white px-6 py-3 rounded-lg text-base font-semibold transition-all" data-doc-id={d.id}>
                    Submit Response
                  </button>
                </>
              )}
            </div>
          </li>
        ))}
      </ul>
    )}
  </PortalPage>
</PortalLayout>

<script is:inline>
  document.querySelectorAll('.feedback-submit').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const docId = btn.dataset.docId;
      if (!docId) return;
      const card = btn.closest('li');
      const ack = card?.querySelector('.feedback-ack')?.checked ?? false;
      const approvedEl = card?.querySelector('.feedback-approve');
      const rejectedEl = card?.querySelector('.feedback-reject');
      let approved = null;
      if (approvedEl?.classList.contains('ring-2')) approved = true;
      if (rejectedEl?.classList.contains('ring-2')) approved = false;
      const comments = card?.querySelector('.feedback-comments')?.value?.trim() ?? '';
      try {
        const res = await fetch('/api/feedback', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'response', doc_id: docId, acknowledged: ack, approved, comments }),
          credentials: 'same-origin',
        });
        const data = await res.json();
        if (data.success) window.location.reload();
        else alert(data.error || 'Failed to submit');
      } catch {
        alert('Network error. Please try again.');
      }
    });
  });
  document.querySelectorAll('.feedback-approve').forEach((btn) => {
    btn.addEventListener('click', () => {
      const card = btn.closest('li');
      card?.querySelector('.feedback-reject')?.classList.remove('ring-2', 'ring-green-600');
      btn.classList.add('ring-2', 'ring-green-600');
    });
  });
  document.querySelectorAll('.feedback-reject').forEach((btn) => {
    btn.addEventListener('click', () => {
      const card = btn.closest('li');
      card?.querySelector('.feedback-approve')?.classList.remove('ring-2', 'ring-green-600');
      btn.classList.add('ring-2', 'ring-red-600');
    });
  });
</script>
