    <script is:inline>
      (function () {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        if (!menuButton || !mobileMenu) return;
        /** @type {HTMLElement} */
        const btn = menuButton;
        /** @type {HTMLElement} */
        const menu = mobileMenu;

        const menuLinks = menu.querySelectorAll('a');
        const firstLink = menuLinks[0];
        const lastLink = menuLinks[menuLinks.length - 1];

        const menuIcon = document.getElementById('mobile-menu-icon');
        const menuCloseIcon = document.getElementById('mobile-menu-close-icon');

        function toggleMenu() {
          const isOpen = !menu.classList.contains('hidden');
          menu.classList.toggle('hidden');
          btn.setAttribute('aria-expanded', isOpen ? 'false' : 'true');

          // Toggle icon visibility
          if (menuIcon && menuCloseIcon) {
            if (isOpen) {
              menuIcon.classList.remove('hidden');
              menuCloseIcon.classList.add('hidden');
            } else {
              menuIcon.classList.add('hidden');
              menuCloseIcon.classList.remove('hidden');
            }
          }

          // Focus management
          if (!isOpen) {
            // Menu opening - focus first link
            setTimeout(() => firstLink?.focus(), 100);
          }
        }

        function closeMenu() {
          menu.classList.add('hidden');
          btn.setAttribute('aria-expanded', 'false');
          if (menuIcon && menuCloseIcon) {
            menuIcon.classList.remove('hidden');
            menuCloseIcon.classList.add('hidden');
          }
          btn.focus();
        }

        // Toggle on button click
        btn.addEventListener('click', toggleMenu);

        // Close on Escape key
        document.addEventListener('keydown', function (e) {
          if (e.key === 'Escape' && !menu.classList.contains('hidden')) {
            closeMenu();
          }
        });

        // Focus trap when menu is open
        /** @param {KeyboardEvent} e */
        function handleTabKey(e) {
          if (menu.classList.contains('hidden')) return;

          if (e.key === 'Tab') {
            if (e.shiftKey) {
              // Shift + Tab
              if (document.activeElement === firstLink) {
                e.preventDefault();
                lastLink?.focus();
              }
            } else {
              // Tab
              if (document.activeElement === lastLink) {
                e.preventDefault();
                firstLink?.focus();
              }
            }
          }
        }

        document.addEventListener('keydown', handleTabKey);

        // Close menu when clicking outside
        document.addEventListener('click', function (e) {
          var target = /** @type {Node | null} */ (e.target);
          if (!menu.classList.contains('hidden') && target &&
              !menu.contains(target) &&
              !btn.contains(target)) {
            closeMenu();
          }
        });

        // Close menu when a link is clicked (mobile navigation)
        menuLinks.forEach(link => {
          link.addEventListener('click', () => {
            closeMenu();
          });
        });

        // Mobile Resources dropdown toggle
        const mobileResourcesToggle = document.getElementById('mobile-resources-toggle');
        const mobileResourcesSubmenu = document.getElementById('mobile-resources-submenu');
        const mobileResourcesChevron = document.getElementById('mobile-resources-chevron');

        if (mobileResourcesToggle && mobileResourcesSubmenu && mobileResourcesChevron) {
          mobileResourcesToggle.addEventListener('click', () => {
            const isOpen = !mobileResourcesSubmenu.classList.contains('hidden');
            mobileResourcesSubmenu.classList.toggle('hidden');
            mobileResourcesToggle.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
            mobileResourcesChevron.style.transform = isOpen ? 'rotate(0deg)' : 'rotate(180deg)';
          });

          // Close mobile menu when clicking on a resources submenu link
          const resourcesSubmenuLinks = mobileResourcesSubmenu.querySelectorAll('.mobile-resources-link');
          resourcesSubmenuLinks.forEach(link => {
            link.addEventListener('click', () => {
              closeMenu();
            });
          });
        }

        // Desktop dropdown keyboard support
        const resourcesDropdown = document.getElementById('resources-dropdown');
        const resourcesDropdownButton = document.getElementById('resources-dropdown-button');
        if (resourcesDropdown && resourcesDropdownButton) {
          const dropdownMenu = resourcesDropdown.querySelector('[role="menu"]');

          resourcesDropdownButton.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              dropdownMenu?.classList.toggle('opacity-0');
              dropdownMenu?.classList.toggle('invisible');
              dropdownMenu?.classList.toggle('opacity-100');
              dropdownMenu?.classList.toggle('visible');
              const isExpanded = dropdownMenu?.classList.contains('visible');
              resourcesDropdownButton.setAttribute('aria-expanded', isExpanded ? 'true' : 'false');
            }
            if (e.key === 'Escape') {
              dropdownMenu?.classList.add('opacity-0', 'invisible');
              dropdownMenu?.classList.remove('opacity-100', 'visible');
              resourcesDropdownButton.setAttribute('aria-expanded', 'false');
            }
          });

          // Close dropdown when clicking outside
          document.addEventListener('click', function (e) {
            var target = /** @type {Node | null} */ (e.target);
            if (!target || !resourcesDropdown.contains(target)) {
              dropdownMenu?.classList.add('opacity-0', 'invisible');
              dropdownMenu?.classList.remove('opacity-100', 'visible');
              resourcesDropdownButton.setAttribute('aria-expanded', 'false');
            }
          });

          // Close dropdown when pointer leaves after a short delay (roll up when focus moves away)
          /** @type {ReturnType<typeof setTimeout> | null} */
          var closeTimer = null;
          const closeDelayMs = 400;
          resourcesDropdown.addEventListener('pointerleave', () => {
            closeTimer = window.setTimeout(() => {
              dropdownMenu?.classList.add('opacity-0', 'invisible');
              dropdownMenu?.classList.remove('opacity-100', 'visible');
              resourcesDropdownButton.setAttribute('aria-expanded', 'false');
              closeTimer = null;
            }, closeDelayMs);
          });
          resourcesDropdown.addEventListener('pointerenter', function () {
            if (closeTimer != null) {
              window.clearTimeout(closeTimer);
              closeTimer = null;
            }
          });
        }
      })();
