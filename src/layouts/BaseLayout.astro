---
import '../styles/tailwind.css';
import Analytics from '../components/Analytics.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import UsageBeacon from '../components/UsageBeacon.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  preloadImages?: string[];
  /** When true, adds robots noindex,follow and keeps canonical as self (for 404, thank-you, etc.) */
  noindex?: boolean;
}

const { title, description = 'Crooked Lake Reserve Homeowners Association', image, preloadImages = [], noindex = false } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteURL = Astro.site || 'https://clrhoa.com';
const fullTitle = `${title} | Crooked Lake Reserve HOA`;
const ogImage = image || `${siteURL}/hero/clr-lake-ducie.webp`;

// Get current path for active navigation highlighting
const currentPath = Astro.url.pathname;
function isActive(path: string): boolean {
  return currentPath === path || (path !== '/' && currentPath.startsWith(path));
}

// Address information from environment variables (for structured data)
const addressStreet = import.meta.env.PUBLIC_PHYSICAL_ADDRESS_STREET ?? '';
const addressCity = import.meta.env.PUBLIC_PHYSICAL_ADDRESS_CITY ?? 'Eustis';
const addressState = import.meta.env.PUBLIC_PHYSICAL_ADDRESS_STATE ?? 'FL';
const addressPostalCode = import.meta.env.PUBLIC_PHYSICAL_ADDRESS_ZIP ?? '';

// Social media links (optional)
const facebookUrl = import.meta.env.PUBLIC_FACEBOOK_URL ?? '';
const twitterUrl = import.meta.env.PUBLIC_TWITTER_URL ?? '';
const instagramUrl = import.meta.env.PUBLIC_INSTAGRAM_URL ?? '';
const nextdoorUrl = import.meta.env.PUBLIC_NEXTDOOR_URL ?? '';

// Resources dropdown menu items - organized by category
const resourcesMenuItems = [
  // Most Frequently Used
  { name: 'Overview', path: '/resources', category: 'main' },
  { name: 'Emergency Contacts', path: '/resources/emergency-contacts', category: 'main' },
  { name: 'FAQ', path: '/resources/faq', category: 'main' },

  // Community Resources
  { name: 'Local Resources', path: '/resources/local-resources', category: 'community' },
  { name: 'Internet Services', path: '/resources/internet-services', category: 'community' },
  { name: 'Vendor List', path: '/resources/vendors', category: 'community' },
  { name: 'Community Map', path: '/resources/map', category: 'community' },

  // Safety & Preparedness
  { name: 'Hurricane Preparedness', path: '/resources/hurricane', category: 'safety' },
  { name: 'Wildlife Safety', path: '/resources/wildlife-safety', category: 'safety' },
  { name: 'Water Restrictions', path: '/resources/water-restrictions', category: 'safety' },

  // Legal & Compliance
  { name: 'Florida HOA Law', path: '/resources/law', category: 'legal' },
  { name: 'Flood Insurance', path: '/resources/flood-insurance', category: 'legal' },

  // Maintenance
  { name: 'Pest Control', path: '/resources/pest-control', category: 'maintenance' },
];

// Group resources by category for better organization
const resourcesByCategory = {
  main: resourcesMenuItems.filter(item => item.category === 'main'),
  community: resourcesMenuItems.filter(item => item.category === 'community'),
  safety: resourcesMenuItems.filter(item => item.category === 'safety'),
  legal: resourcesMenuItems.filter(item => item.category === 'legal'),
  maintenance: resourcesMenuItems.filter(item => item.category === 'maintenance'),
};
