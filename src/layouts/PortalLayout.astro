---
/**
 * Layout for portal (member) pages with Gmail-style sidebar navigation.
 * Ensures UTF-8 charset and consistent document structure.
 * Includes sidebar, top header with profile dropdown, and main content area.
 */
import '../styles/tailwind.css';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import UsageBeacon from '../components/UsageBeacon.astro';
import ServiceWorkerRegistration from '../components/ServiceWorkerRegistration.astro';

interface Props {
  title?: string;
}

const { title = 'Member Portal | Crooked Lake Reserve HOA' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#1e5f38" />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 font-body">
    <!-- Main layout: sidebar + content area -->
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar and Header are injected by page components (via slots) -->
      <!-- This allows pages to pass dynamic data to navigation components -->
      <slot />
    </div>
    <FeedbackWidget />
    <UsageBeacon />
    <ServiceWorkerRegistration />
  </body>
</html>
